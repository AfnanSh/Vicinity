<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/commentedOnName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="13dip"
        android:paddingTop="13dip"
        android:paddingRight="13dip"
        android:textColor="#813e3e3d"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_below="@+id/commentedOnName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/commentedOn"
        android:textSize="17sp"
        android:paddingBottom="13dip"
        android:paddingLeft="13dip"
        android:paddingRight="13dip"
        android:textColor="#000"
        />

    <TextView
        android:layout_marginTop="4dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#503e3e3d"
        android:text=" "
        android:textSize="0.4dip"
        android:layout_below="@+id/commentedOn"
        android:id="@+id/line1" />

    <ListView
        android:layout_below="@+id/line1"
        android:id="@+id/commentsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transcriptMode="alwaysScroll"
        >
    </ListView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:ems="10"
            android:id="@+id/commentTextField"
            android:layout_gravity="bottom"
            android:layout_weight="0.90"
            android:hint="Write comment"
            android:focusableInTouchMode="true"
            android:visibility="visible"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/sendCommentButton"
            android:layout_gravity="bottom|right"
            android:layout_weight="0.10" />

    </LinearLayout>



</RelativeLayout>
