<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@drawable/app_background</item>
    </style>

    <style name="TabTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Style</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Style</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_style</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_style</item>
        <item name="android:actionBarTabTextStyle">@style/TabCustomStyle</item>
        <item name="android:actionBarDivider">@null</item>
        <item name="android:actionBarSize">50dip</item>



    </style>

    <style name="ActionBar.Solid.Style" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_style</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_style</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_style</item>


    </style>

    <style name="ActionBar.Transparent.Style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_style</item>


    </style>


    <style name="ActionBarTabStyle.Style" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator</item>





    </style>


    <style name="TabCustomStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>



    </style>




</resources>
